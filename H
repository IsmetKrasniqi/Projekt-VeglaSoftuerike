
#include <iostream>
#include "paga.h"

using namespace std;

void shfaqRezultatin(float paga, float pagaZbritur)
{
    if (pagaZbritur > 0) {
        cout << "Kete muaj do t'ju zbritet paga per "
             << pagaZbritur << " euro." << endl;
    }

    cout << "Paga per kete muaj: "
         << paga - pagaZbritur << " euro." << endl;
}


